#!/bin/sh -e
#
# rc.local
#
# This script is executed at the end of each multiuser runlevel.
# Make sure that the script will "exit 0" on success or any other
# value on error.
#
# In order to enable or disable this script just change the execution
# bits.
#
# By default this script does nothing.

# Print the IP address
_IP=$(hostname -I) || true
if [ "$_IP" ]; then
  printf "My IP address is %s\n" "$_IP"
fi

/usr/local/bin/wifistart
/usr/local/bin/autofindFlowerCare

/usr/local/bin/uwsgi --ini DIRECTORY_HERE/uwsgi_config.ini --uid www-data --gid www-data --daemonize DIRECTORY_HERE/uwsgi.log --touch-reload DIRECTORY_HERE/run.py

python3 /opt/miflora-mqtt-daemon/miflora-mqtt-daemon.py &

python3 DIRECTORY_HERE/sensorReader.py &

exit 0
